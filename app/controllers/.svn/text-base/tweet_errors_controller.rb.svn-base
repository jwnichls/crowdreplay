class TweetErrorsController < ApplicationController
  # GET /tweet_errors
  # GET /tweet_errors.xml
  def index
    @tweet_errors = TweetError.all

    respond_to do |format|
      format.html # index.html.erb
      format.xml  { render :xml => @tweet_errors }
    end
  end

  # GET /tweet_errors/1
  # GET /tweet_errors/1.xml
  def show
    @tweet_error = TweetError.find(params[:id])

    respond_to do |format|
      format.html # show.html.erb
      format.xml  { render :xml => @tweet_error }
    end
  end

  # GET /tweet_errors/new
  # GET /tweet_errors/new.xml
  def new
    @tweet_error = TweetError.new

    respond_to do |format|
      format.html # new.html.erb
      format.xml  { render :xml => @tweet_error }
    end
  end

  # GET /tweet_errors/1/edit
  def edit
    @tweet_error = TweetError.find(params[:id])
  end

  # POST /tweet_errors
  # POST /tweet_errors.xml
  def create
    @tweet_error = TweetError.new(params[:tweet_error])

    respond_to do |format|
      if @tweet_error.save
        format.html { redirect_to(@tweet_error, :notice => 'TweetError was successfully created.') }
        format.xml  { render :xml => @tweet_error, :status => :created, :location => @tweet_error }
      else
        format.html { render :action => "new" }
        format.xml  { render :xml => @tweet_error.errors, :status => :unprocessable_entity }
      end
    end
  end

  # PUT /tweet_errors/1
  # PUT /tweet_errors/1.xml
  def update
    @tweet_error = TweetError.find(params[:id])

    respond_to do |format|
      if @tweet_error.update_attributes(params[:tweet_error])
        format.html { redirect_to(@tweet_error, :notice => 'TweetError was successfully updated.') }
        format.xml  { head :ok }
      else
        format.html { render :action => "edit" }
        format.xml  { render :xml => @tweet_error.errors, :status => :unprocessable_entity }
      end
    end
  end

  # DELETE /tweet_errors/1
  # DELETE /tweet_errors/1.xml
  def destroy
    @tweet_error = TweetError.find(params[:id])
    @tweet_error.destroy

    respond_to do |format|
      format.html { redirect_to(tweet_errors_url) }
      format.xml  { head :ok }
    end
  end
end
